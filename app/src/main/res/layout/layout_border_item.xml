<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/x1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/customer_non"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Иванов"
        app:layout_constraintLeft_toRightOf="@id/x1"
        app:layout_constraintTop_toTopOf="@id/x1"
        app:layout_constraintBottom_toTopOf="@id/x3"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Александр"
        app:layout_constraintLeft_toLeftOf="@id/x2"
        app:layout_constraintTop_toBottomOf="@id/x2"
        app:layout_constraintBottom_toBottomOf="@id/x1"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/x4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grad1"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заказ"
        app:layout_constraintTop_toTopOf="@id/x4"
        app:layout_constraintBottom_toBottomOf="@id/x4"
        app:layout_constraintLeft_toLeftOf="@id/x4"
        app:layout_constraintRight_toRightOf="@id/x4"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/x7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="500 руб."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/x5"
        app:layout_constraintTop_toTopOf="@id/x5"
        app:layout_constraintBottom_toBottomOf="@id/x5"
        android:layout_marginRight="20dp"/>
    <View
        android:id="@+id/x6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/x3"
        android:background="@drawable/devider1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>