<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Оливковое масло"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/item_image_view1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/rectangle4"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/item_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В корзину"
        app:layout_constraintTop_toTopOf="@id/item_text_view"
        app:layout_constraintBottom_toBottomOf="@id/item_text_view"
        app:layout_constraintLeft_toLeftOf="@id/item_image_view1"
        app:layout_constraintRight_toRightOf="@id/item_image_view1"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/item_text_view"
        android:background="@drawable/devider1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
