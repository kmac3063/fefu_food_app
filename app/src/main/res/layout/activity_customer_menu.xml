    android:background="@drawable/background">


    <ImageView
        android:id="@+id/ссamimage_view0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_little"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp" />
    <TextView
        android:id="@+id/ссamback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Меню"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ссamimage_view0"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/ссamimage_view0"
        app:layout_constraintTop_toTopOf="@+id/ссamimage_view0" />
    <ImageView
        android:id="@+id/ссamimage_view1"
        android:layout_width="330dp"
        android:layout_height="140dp"
