        app:layout_constraintEnd_toEndOf="@+id/ссinvisible_order"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ссinvisible_order"
        app:layout_constraintTop_toBottomOf="@+id/ссtext_view12345" />

