        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ссname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Здравствуй, друг!"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ссamimage_view1"
        app:layout_constraintStart_toStartOf="@+id/ссamimage_view1"
        app:layout_constraintTop_toTopOf="@+id/ссamimage_view1" />

    <TextView
        android:id="@+id/ссphone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8(800)555-35-35"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@+id/ссamimage_view1"
        app:layout_constraintTop_toBottomOf="@+id/ссname_text_view" />

    <TextView
        android:id="@+id/ссcard_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="****-****-****-****"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ссphone_text_view"
        app:layout_constraintTop_toBottomOf="@+id/ссphone_text_view" />

    <TextView
        android:id="@+id/ссchange_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/link1"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ссphone_text_view"
        app:layout_constraintEnd_toEndOf="@+id/ссamimage_view1"
        app:layout_constraintStart_toEndOf="@+id/ссphone_text_view"
        app:layout_constraintTop_toTopOf="@+id/ссphone_text_view" />

    <TextView
        android:id="@+id/ссchange_card_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
