<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fefu_food_app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/layout_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/layout_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ChatActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".OrderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BoardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BasketActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CustomerMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProductsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CategoriesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>